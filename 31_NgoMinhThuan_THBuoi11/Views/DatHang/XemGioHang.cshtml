@model _31_NgoMinhThuan_THBuoi11.Models.GioHang

@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <h2>Thông tin giỏ hàng của bạn</h2>
    <table class="table">
        <tr>
            <th>Mã sách</th>
            <th>Tên sách</th>
            <th>Ảnh bìa</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model.lst)
        {
            <tr>
                <td>@item.iMaSach</td>
                <td>@item.sTenSach</td>
                <td>
                    <img src="~/Content/Images/@item.sAnhBia" alt="Alternate Text" />
                </td>
                <td>@item.iSoLuong</td>
                <td>@item.dDonGia</td>
                <td>@item.ThanhTien</td>
                <td>
                    <a href="#">Chi tiết sách</a>
                </td>
                <td>
                    <a href="#">Xóa</a>
                </td>
                <td>
                    <a href="#" class="btn btn-secondary">Sửa</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="9" class="text-center">
                <a href="~/DatHang/XacNhanDatHang" class="btn btn-primary">Xác nhận đặt hàng</a>
            </td>
        </tr>
    </table>
</section>