@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="~/KhachHang/Login" method="post" class="mt-3">
    <div class="mx-auto w-25">
        <h3 class="text-center">Đăng Nhập</h3>
        <div class="mb-3">
            <input type="text" name="txtTen" placeholder="Tên khách hàng" class="form-control" />
        </div>
        <div class="mb-3">
            <input type="password" name="txtMatKhau" placeholder="Mật khẩu" class="form-control" />
        </div>
        <div>
            @ViewBag.Error
        </div>
        <button type="submit" class="mx-auto d-block">Đăng nhập</button>
    </div>
</form>
